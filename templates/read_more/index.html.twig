{% extends 'base.html.twig' %}

{% block title %}ReadMore index{% endblock %}

{% block body %}
    <h1>ReadMore index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Content</th>
                <th>Title</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for read_more in read_mores %}
            <tr>
                <td>{{ read_more.id }}</td>
                <td>{{ read_more.content }}</td>
                <td>{{ read_more.title }}</td>
                <td>
                    <a href="{{ path('read_more_show', {'id': read_more.id}) }}">show</a>
                    <a href="{{ path('read_more_edit', {'id': read_more.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('read_more_new') }}">Create new</a>
{% endblock %}
